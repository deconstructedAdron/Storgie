extends header
block content
    body.login1
        .login-wrapper
            .login-container
                a(href='/')
                    img(width='100', height='30', src='images/logo-login@2x.png')
                form(action='index.html')
                    .form-group
                        input.form-control(placeholder='Username or Email', type='text')
                    .form-group
                        input.form-control(placeholder='Password', type='text')
                        input(type='submit', value='')
                    .form-options.clearfix
                        a.pull-right(href='>') Forgot password?
                        .text-left
                            label.checkbox
                                input(type='checkbox')
                                span Remember me
                p.signup
                    | Don't have an account yet?
                    a(href='/signup')  Sign up now